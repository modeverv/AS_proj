package com.adobe.air.imagebrowser.ui {		import com.gskinner.motion.GTween;		import flash.display.Sprite;	import flash.geom.Rectangle;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	public class MessageDisplay extends Sprite {				public var displayTxt:TextField;		public var bg:Sprite;		public var stroke:Sprite;				protected var inTween:GTween;		protected var outTween:GTween;		protected var startRect:Rectangle;				public function MessageDisplay() {			super();			inTween = new GTween(this, .5, {alpha:1}, {autoPlay:false});						outTween = new GTween(this, .5, {alpha:0}, {delay:1, autoPlay:false});						startRect = new Rectangle(displayTxt.x, displayTxt.y, displayTxt.width, displayTxt.height);						displayTxt.autoSize = TextFieldAutoSize.LEFT;		}				public function hide():void {			if (alpha == 1) {				outTween.play();			}		}				public function show(p_text:String, p_inOnly:Boolean = false):void {			displayTxt.text = p_text;						stroke.width = bg.width = displayTxt.width + (startRect.x*2);			stroke.height = bg.height = displayTxt.height + (startRect.y*2);			displayTxt.x = startRect.x;			displayTxt.y = startRect.y;						x = stage.stageWidth - width>>1;			y = stage.stageHeight - height>>1;						if (p_inOnly) {				inTween.nextTween = null;			} else {				inTween.nextTween = outTween;			}						if (inTween.paused == true) {				inTween.play();			}		}			}}