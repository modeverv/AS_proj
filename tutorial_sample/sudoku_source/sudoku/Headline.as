package sudoku {	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	public class Headline extends TextField {		var tf:TextFormat;		public function Headline(size:Number):void		{			selectable = false;			// set the text format			tf = new TextFormat("Arial,Helvetica,Verdana", 18);			tf.align = TextFormatAlign.CENTER;			defaultTextFormat = tf;			y = 10;			x = 0;			width = size;			height = 24;		}	}}